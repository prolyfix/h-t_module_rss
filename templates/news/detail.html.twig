{% extends '@!EasyAdmin/page/content.html.twig' %}
{% block main %}
	<div
		class="container-fluid">
		<!-- start page title -->
		<div class="row">
			<div class="col-12">
				<div class="page-title-box">
					<h4 class="page-title">{{entity.instance.title}}</h4>
                    {# Todo: int√©grer les boutons d'easy admin.#}
					<div class="page-title-right">


					</div>
				</div>
			</div>
		</div>
		<!-- end page title -->
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body" data-controller="order">
                        {{entity.instance.content |raw}}
							{% if entity.instance.filename is not null %}
								<a target="_blank" href="{{ ea_url() .setController('App\\Controller\\Admin\\MediaCrudController') .setAction('servePrivateFileByName') .set('fileName', entity.instance.filename).setEntityId(null) }}" class="">Download File</a>
							{% endif %}
						<div class="mt-3">
							{% include 'common/avatar.html.twig' with {'user': entity.instance.createdBy} %}

							<small class="text-muted">{{ entity.instance.creationDate|date('Y-m-d') }}</small>
						</div>
						{% if entity.instance.rssFeedEntry is not null %}
						<div class="mt-3">
							Gelesen von:
							{% for userId in entity.instance.rssFeedEntry.readByIds %}
								{{ generateAvatar(userId) | raw}}
							{% endfor %}
						</div>						
						{% endif %}					
					</div>
				</div>
			</div>
		</div>
		<!-- end row -->

	</div>
	<input type="hidden" id="comment_class_name" value="news">
	{% include 'section/comment/comments.html.twig' with {'comments': entity.instance.comments} %}

{% endblock %}
